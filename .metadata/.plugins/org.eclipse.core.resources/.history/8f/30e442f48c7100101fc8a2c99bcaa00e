package com.br.api.forum_hub.service;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.br.api.forum_hub.config.ConversorDTO;
import com.br.api.forum_hub.dto.SalvarTopicoDTO;
import com.br.api.forum_hub.model.Topico;
import com.br.api.forum_hub.repository.ITopicoRepository;

@Service
public class TopicoService {
	
	@Autowired
	private final ITopicoRepository topicoRepository;
	
	@Autowired
	private final ConversorDTO conversorDTO;



	public SalvarTopicoDTO salvarTopico(SalvarTopicoDTO salvarTopicoDTO) {
		Topico topico = conversorDTO.dtoToEntity(salvarTopicoDTO);
		var salvarTopico = topicoRepository.save(topico);
		return conversorDTO.entityToDto(salvarTopico);
	}
	
	
}
